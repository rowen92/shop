<p id="notice"><%= notice %></p>
<div class="col-md-6">
  <h2>In the basket:</h2>
  <table class="table">
    <% @line_items.each_with_index do |line_item, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to line_item.product.title, product_path(line_item.product) %></td>
      <td>1</td>
      <td><%= number_to_currency(line_item.product.price) %></td>
      <% @total_amount += line_item.product.price %>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td><%= number_to_currency(@total_amount) %></td>
    </tr>
  </table>
</div>
<div class="col-md-6">
  <%= link_to 'Make a purchase', '#' %>
</div>
