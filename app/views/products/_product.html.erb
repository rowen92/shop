<div class="product">
  <p><%= link_to product.category.title, products_path(category: product.category) %></p>
  <%= link_to (image_tag product.image_url(:small)), product if product.image? %>
  <p><%= link_to product.title, product %></p>
  <p>Price: <%= number_to_currency(product.price, precision: 2, separator: ',') %></p>

  <div class="action">
    <%= button_to 'Buy', line_items_path(product_id: product), class: 'btn-buy' %>
  </div>
</div>
