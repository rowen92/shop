<% provide(:title, '| ' + @product.title) %>
<h2><%= @product.title %></h2>
<div>
  <%= image_tag @product.image_url(:big) %>
</div>
<p><%= @product.description %></p>
<p>Price: <%= number_to_currency(@product.price, precision: 2, separator: ',') %></p>

<div class="action">
  <%= button_to 'Buy', line_items_path(product_id: @product), class: 'btn-buy' %>
</div>
